<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Properties>
    <Property name="teamcity.git.debug.prefix">[teamcity-git]</Property>
  </Properties>
  <Appenders>
      <Console name="Console" target="SYSTEM_ERR">
        <PatternLayout pattern="${sys:teamcity.git.debug.prefix} [%d] %6p - %30.30c - %m%n%ex"/>
      </Console>
      <Null name="Null" />
  </Appenders>
  <Loggers>
    <Logger name="jetbrains.buildServer.buildTriggers.vcs.git.command.credentials" level="DEBUG">
      <Select>
        <SystemPropertyArbiter propertyName="teamcity.git.credhelper.debug.enabled" propertyValue="true">
          <AppenderRef ref="Console"/>
        </SystemPropertyArbiter>
        <DefaultArbiter>
          <AppenderRef ref="Null"/>
        </DefaultArbiter>
      </Select>
    </Logger>

    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>