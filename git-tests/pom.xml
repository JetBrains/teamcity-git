    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>test-api</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>patches-tests</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>common-test-core</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>common-tests</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>server-test-core</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
