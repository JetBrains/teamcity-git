    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>patches-impl</artifactId>
      <version>${teamcity.version}</version>
    </dependency>

    <dependency>
      <groupId>org.jetbrains.teamcity</groupId>
      <artifactId>web-openapi</artifactId>
